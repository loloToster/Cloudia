{
  "exclude": [
    "./client"
  ],
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "rootDir": ".",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
